<!--pages/scrollView/scrollView.wxml-->

<!-- scroll-view 属性：scroll-x scroll-y -->
<!-- 垂直滚动 -->

<scroll-view class="container1" scroll-x>
  <view wx:for="{{10}}" class="item1">{{item}}</view>
</scroll-view>

<!-- 水平滚动 -->
<scroll-view class="container2" scroll-y bindscroll="distanceTop">
  <view wx:for="{{10}}" class="item2">{{item}}</view>
</scroll-view>